            </DataTrigger>
        </Style.Triggers>
    </Style>




    <!-- 修改支付金额弹出框 -->
    <Style x:Key="ctrChangePaidPriceControlStyle" TargetType="Control">
        <Setter Property="Visibility" Value="Collapsed"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsDisplay}" Value="True">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>



</ResourceDictionary>